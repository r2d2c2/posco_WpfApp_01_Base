<Window x:Class="WpfApp_DataGrid_Runing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_DataGrid_Runing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <WrapPanel>
                <Button Name="btnOpen" Content="file open" Width="100" Margin="5" Click="btnOpen_Click"/>
                <Button Name="btnGetdata" Content="file data" Width="100" Margin="5" Click="btnGetdata_Click"/>
            </WrapPanel>
            <Label Name="pathLabel" Content="파일경로" Margin="5"/>
            <DataGrid Name="dataGrid" Height="200"/>
        </StackPanel>

    </Grid>
</Window>
